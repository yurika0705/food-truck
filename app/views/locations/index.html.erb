<body>
  <div id="container">
      <%= image_tag "mainimg2.jpg", class:"mainimg" %>
    <div id="contents">
      <section id="new">
        <h2>出店場所一覧</h2>
          <%# 投稿がある場合は、eachメゾッドで一覧表示する %>
          <div class="location-lists">
            <div class="prefecture-group">福岡県</div>
            <div class="location-list">
            <% @location1.each do |location| %> 
            <div class="location-image-content">
              <%= image_tag location.image.variant(resize: '200x200'), class: 'location-image' if location.image.attached? %>
              <%= link_to(location.place, location_path(location.id)) %>
            </div>
            <% end %>
            </div>
