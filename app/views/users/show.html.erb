<div class="container">
  <div class="subtitle"><%= @user.name %>・・・My Calender・・・</div>
  <%# カレンダー表示 %>
    <div class="col-md-8">
  <%= month_calendar events: @events do |date, events| %>
    <%= date.day %>
    <% events.each do |event| %>
      <div>
        <%= event.title %>
        <%# <%= link_to event.title, location_event_path(event.id, order_sort: 1) %>
      </div>
    <% end %>
  <% end %>
  </div>
</div>